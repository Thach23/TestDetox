@using Outsourcing.Data.Models
@using Labixa.ViewModels
@model IEnumerable<Blog>
@{
    ViewBag.Title = "SearchBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ShopFormModel shopFormModel = ViewBag.shopFormModel;
}

<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="index1.html">Trang chủ<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a>Tìm kiếm bài viết</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Start Blog Single -->
<section class="blog-single section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="blog-single-main">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Any() && Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <div class="newslist">
                                        <article class="item-news article-topstory item-news-common item-list-news">
                                            <a title="@item.Title" href="@Url.RouteUrl("ChiTietTinTuc", new { slug = item.Slug})">
                                                <div class="thumb-art-left">
                                                    <picture>
                                                        <img itemprop="contentUrl" src="@item.BlogImage" class="img-fluid" style="width: 100%; height:auto">
                                                    </picture>
                                                </div>
                                                <h3 class="titlecom-2 title-news txt_16 mt5 title-color-blue text-align-justify">
                                                    @item.Title
                                                </h3>
                                                <div class="time_comment text-left mt5 mb5"><i>3/30/2022</i></div>
                                                <p class="description-blog txt_14 titlecom-4 text-align-justify">
                                                    @item.Description
                                                </p>
                                            </a>
                                        </article>

                                    </div>
                                }
                            }
                            else
                            {
                                <p>Không có dữ liệu</p>
                            }

                        </div>

                    </div>
                </div>
            </div>

            @Html.Partial("_RightMenuPartial", shopFormModel.blogsRelated)
        </div>
    </div>
</section>
<!--/ End Blog Single -->
