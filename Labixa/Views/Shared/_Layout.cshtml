                }
            });
        }

        function buy(id) {

            $.ajax({
                type: "POST",
                url: '/Shop/Buy',
               
                data: JSON.stringify({
                    "id": id,
                }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    /*$('#cart').html(data.cart);*/
                    load();
                    alert(data.Message);
                },
                error: function () {
